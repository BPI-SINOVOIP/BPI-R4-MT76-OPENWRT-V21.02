 					  csa_ie.mode, 0);
@@ -3066,6 +3071,10 @@ static void ieee80211_set_disassoc(struct ieee80211_sub_if_data *sdata,
 	       sizeof(sdata->vif.bss_conf.tx_pwr_env));
 
 	ieee80211_vif_set_links(sdata, 0, 0);
